<script>
  // üéØ FUNCIONALIDAD DEL MODAL DE PRIVACIDAD
  
  // Declaraciones de tipos para funciones globales
  declare global {
    interface Window {
      openPrivacyModal: () => void;
      closePrivacyModal: () => void;
    }
  }
  
  // Funci√≥n para abrir el modal
  function openPrivacyModal() {
    const modal = document.getElementById('privacy-modal');
    if (modal) {
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
      
      // Focus en el primer elemento
      const closeButton = modal.querySelector('#close-modal') as HTMLElement;
      if (closeButton) {
        closeButton.focus();
      }
    }
  }

  // Funci√≥n para cerrar el modal
  function closePrivacyModal() {
    const modal = document.getElementById('privacy-modal');
    if (modal) {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    }
  }

  // Event listeners cuando el DOM est√© listo
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('privacy-modal');
    const closeButton = document.getElementById('close-modal');
    const acceptButton = document.getElementById('accept-privacy');
    const overlay = modal?.querySelector('.modal-overlay');

    // Cerrar con bot√≥n X
    if (closeButton) {
      closeButton.addEventListener('click', closePrivacyModal);
    }

    // Cerrar con bot√≥n Entendido
    if (acceptButton) {
      acceptButton.addEventListener('click', closePrivacyModal);
    }

    // Cerrar al hacer clic en el overlay
    if (overlay) {
      overlay.addEventListener('click', function(e) {
        if (e.target === overlay) {
          closePrivacyModal();
        }
      });
    }

    // Cerrar con tecla Escape
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
        closePrivacyModal();
      }
    });

    // Hacer la funci√≥n global para que pueda ser llamada desde otros scripts
    window.openPrivacyModal = openPrivacyModal;
    window.closePrivacyModal = closePrivacyModal;
  });
</script>