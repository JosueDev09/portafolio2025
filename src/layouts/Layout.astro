---
import Menu from "../components/menu/menu"
import Footer from "../components/footer/footer.astro";
import { ClientRouter } from "astro:transitions";
const { 
  title = "Josué Dev - Desarrollador Full Stack",
  description = "Desarrollador Full Stack especializado en React, Node.js, Astro y tecnologías modernas. Creando experiencias digitales excepcionales.",
  showMenu = true
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- Favicons -->
		<link rel="icon" type="image/svg+xml" href="/cruz-negativa.svg" />
		<link rel="icon" type="image/png" href="/cruz-negativa.svg" />
		<link rel="apple-touch-icon" href="/cruz-negativa.svg" />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="author" content="Josué Dev" />
		<meta name="keywords" content="desarrollador, full stack, react, node.js, astro, javascript, typescript, portafolio" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		
		<meta name="generator" content={Astro.generator} />
     
	</head>

	<body>
		<!-- Menú fijo - Solo se muestra si showMenu es true -->
		{showMenu && (
			<header class="menu-fijo">
				<Menu client:load />
			</header>
		)}

		<!-- Contenedor del contenido desplazable -->
		<div id="scroll-wrapper">
			<main>
			<slot />
			</main>
			
		</div>
		
	</body>
	<Footer/>
</html>

<style is:global>
  @import 'tailwindcss';  
  @plugin "@midudev/tailwind-animations";

  

  :root{
     background: linear-gradient(
          to bottom,
          #0b0b0d 0%,   /* negro azulado oscuro arriba */
          #0e0f14 25%,  /* transición sutil gris-azul */
          #0f1524 50%,  /* azul oscuro intermedio */
          #0c1c35 75%,  /* azul profundo */
          #0a2048 100%  /* azul más intenso al final */
        );
        background-attachment: fixed; /* efecto parallax suave */
        background-repeat: no-repeat;
        background-size: cover;
  }
	html{
		 margin: 0;
		padding: 0;
	}
      body {
        height: 100%;
        margin: 0;
        padding: 0;
         scroll-behavior: smooth;
         
      }
      section {
        display: flex;
        align-items``: center;
        justify-content: center;
        scroll-snap-align: start;
        padding: 0.5rem 2rem; /* Padding mínimo */
      }      
   
</style>

