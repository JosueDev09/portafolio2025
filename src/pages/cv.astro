                <div class="w-20 bg-gray-700 rounded-full h-2">
                  <div class="bg-cyan-500 h-2 rounded-full w-5/6"></div>
                </div>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-300">Twilio API</span>
                <div class="w-20 bg-gray-700 rounded-full h-2">
                  <div class="bg-cyan-500 h-2 rounded-full w-3/4"></div>
